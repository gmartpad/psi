{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@api/*": ["src/api/*"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@features/*": ["src/store/features/*"],
      "@helpers/*": ["src/helpers/*"],
      "@app/*": ["src/app/*"],
      "@public/*": ["public/*"],
      "@redux/*": ["src/redux/*"],
      "@screens/*": ["src/screens/*"],
      "@shared/*": ["src/shared/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@src/*": ["src/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    "jest.config.ts",
    "shared/styles.js",
    "src/components/blob.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
